{
    "name": "tablecrafter/wp-data-tables",
    "description": "Transform any data source into responsive WordPress tables",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "TableCrafter Team",
            "email": "support@tablecrafter.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "TableCrafter\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TableCrafter\\Tests\\": "tests/php/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "lint": "phpcs --standard=WordPress *.php includes/",
        "lint:fix": "phpcbf --standard=WordPress *.php includes/",
        "phpstan": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}
