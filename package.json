{
  "name": "tablecrafter-wp-data-tables",
  "version": "3.5.2",
  "description": "Transform any JSON API or CSV into beautiful, responsive WordPress data tables with live search, pagination, sorting, and SEO-friendly server-side rendering.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "node scripts/build-js.js",
    "build:css": "node scripts/build-css.js",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "node scripts/build-js.js --watch",
    "watch:css": "node scripts/build-css.js --watch",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "test": "playwright test",
    "test:e2e": "playwright test",
    "clean": "rm -f assets/js/*.min.js assets/css/*.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TableCrafter/wp-data-tables.git"
  },
  "keywords": [
    "wordpress",
    "table",
    "data-tables",
    "json",
    "csv",
    "google-sheets"
  ],
  "author": "TableCrafter Team",
  "license": "GPL-2.0-or-later",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/TableCrafter/wp-data-tables/issues"
  },
  "homepage": "https://github.com/TableCrafter/wp-data-tables#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "clean-css": "^5.3.3",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
